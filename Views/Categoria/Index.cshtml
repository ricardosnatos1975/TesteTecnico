@model List<Categoria>

<h2>Lista de Categoria</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Nome</td>
                <td>@categoria.Descricao</td>
                <rd>Categoria.Preco</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = categoria.Id })" class="btn btn-primary">Editar</a>
                    <a href="@Url.Action("Delete", new { id = categoria.Id })" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-success">Criar Categoria</a>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $.ajax({
            url: "/api/categorias",
            type: "GET",
            success: function (data) {
            }
        });
    });
</script>
